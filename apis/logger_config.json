{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "default",
            "filename": "logs/server.log",
            "maxBytes": 10485760,
            "backupCount": 10
        }
    },
    "loggers": {
        "jm.agent.handler": { "level": "DEBUG", "handlers": ["file"] },
        "jm.slack.handler": { "level": "DEBUG", "handlers": ["file"] },
        "slack_bolt": { "level": "DEBUG", "handlers": ["file"] },
        "slack_sdk": { "level": "DEBUG", "handlers": ["file"] }
    }
}